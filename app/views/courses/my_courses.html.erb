<h1 align="center">My Course </h1>


<% @my_courses.each do |course|%>
    <div class="course">
        <div class="card" style="width: 28rem;">
            <div class="card-body">
                <h5 class="card-title"><%= course.short_name %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= course.name %></h6>
                <p class="card-text"><%= course.description %></p> 
                <%= link_to 'Withdraw', course_withdraw_path(course_id: course.id), class: "card-link", method: :delete, data: { confirm: 'Are you sure?' } %>        
            </div>
        </div>
    </div>
<% end %>